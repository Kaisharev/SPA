{
    "version": 3,
    "configurePresets": [
        {
            "name": "base-config",
            "hidden": true,
            "binaryDir": "${sourceDir}/build",
            "installDir": "${sourceDir}/install"
        },
        {
            "name": "linux-debug",
            "inherits": "base-config",
            "description": "Debug build za Linux (g++)",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "linux-release",
            "inherits": "base-config",
            "description": "Release build za Linux (g++)",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "msvc-debug",
            "inherits": "base-config",
            "description": "Debug build za Windows (MSVC)",
            "generator": "Visual Studio 17 2022",
            "architecture": "x64",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "msvc-release",
            "inherits": "base-config",
            "description": "Release build za Windows (MSVC)",
            "generator": "Visual Studio 17 2022",
            "architecture": "x64",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "mingw-debug",
            "inherits": "base-config",
            "description": "Debug build za Windows (MinGW)",
            "generator": "MinGW Makefiles",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "mingw-release",
            "inherits": "base-config",
            "description": "Release build za Windows (MinGW)",
            "generator": "MinGW Makefiles",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "linux-debug",
            "configurePreset": "linux-debug"
        },
        {
            "name": "linux-release",
            "configurePreset": "linux-release"
        },
        {
            "name": "msvc-debug",
            "configurePreset": "msvc-debug",
            "configuration": "Debug"
        },
        {
            "name": "msvc-release",
            "configurePreset": "msvc-release",
            "configuration": "Release"
        },
        {
            "name": "mingw-debug",
            "configurePreset": "mingw-debug"
        },
        {
            "name": "mingw-release",
            "configurePreset": "mingw-release"
        }
    ]
}